@model Wedding
<div class="container">
    <div class="row pt-3 align-items-center">
        <div class="col-8">
            <div class="d-sm-flex">
                <ul class="list-unstyled justify-content-start d-flex">
                    <li class="d-flex justify-content-around align-items-center mr-2">
                        <h1>Plan Your Wedding</h1>
                    </li>
            </div>
        </div>
        <div class="col-2">
            <div class="d-sm-flex">
                <li class="d-flex">
                    <h4><a href="/dashboard" style="text-decoration: underline;">Dashboard</a></h4>
                </li>
            </div>
        </div>
        <div class="col-2">
            <div class="d-sm-flex"></div>
                <li class="d-flex">
                    <h4><a href="/logout" style="text-decoration: underline;">Log Out</a></h4>
                </li>
            </div>
        </div>
        </ul>
    </div>
</div>
<div class="container">
    <form action="/create/wedding" method="post" class="form-horizontal">
        <div class="form-group col-sm-6 row">
            <label class="col-form-label col-sm-3" for="WedderOne">Wedder One</label>
            <div>
                <input asp-for="WedderOne" class="form-control">
                <span asp-validation-for="WedderOne" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-sm-6 row">
            <label class="col-form-label col-sm-3" for="WedderTwo">Wedder Two</label>
            <div>
                <input asp-for="WedderTwo" class="form-control">
                <span asp-validation-for="WedderTwo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-sm-6 row">
            <label class="col-form-label col-sm-3" for="Date">Date</label>
            <div>
                <input asp-for="Date">
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-sm-6 row">
            <label class="col-form-label col-sm-3" for="Address">Wedding Address</label>
            <div>
                <input asp-for="Address" class="form-control">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-sm-6 row">
            <div class="col-sm-3"></div>
            <div>
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>