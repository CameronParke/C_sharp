@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="container">
    <form action="result" method="post">
        <h1>Welcome! Please fill out the Dojo Survey below.</h1>
        <div class="form-group">
            <label for="name">Your Name:</label>
            <input type="text" class="form-control" placeholder="Enter your name here" name="name">
        </div>
        <div class="form-group">
            <label for="location">Dojo Location:</label>
            <select name="location" class="form-control">
                <option value="" disabled selected hidden>Choose your Dojo Location</option>
                <option value="Bellevue, WA">Bellevue, WA</option>
                <option value="Chicago, IL">Chicago, IL</option>
                <option value="Los Angeles, CA">Los Angeles, CA</option>
                <option value="Silicon Valley, CA">Silicon Valley, CA</option>
                <option value="Boise, ID">Boise, ID</option>
                <option value="Online: Worldwide">Online: Worldwide</option>
            </select>
        </div>
        <div class="form-group">
            <label for="language">Favorite Language</label>
            <select name="language" class="form-control">
                <option value="" disabled selected hidden>Choose your Favorite Language</option>
                <option value="C#">C#</option>
                <option value="MERN">MERN</option>
                <option value="Python">Python</option>
                <option value="Java">Java</option>
            </select>
        </div>
        <div class="form-group">
            <label for="comment">Comment (optional):</label>
            <textarea placeholder="Comments are optional, but if a comment is entered it must be at least 20 characters." id="comment" name="comment" rows="4" cols="50" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>
</div>
