@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="container px-0 pt-4">
    <div class="row mx-0 pt-3">
            <div class="col-10 d-flex">
                <div class="d-sm-flex">
                    <h1>Register to this Cool Site!</h1>
                </div>
            </div>
            <div class="col-2">
                <div class="d-sm-flex pt-4">
                        <a href="/login" style="text-decoration: underline;">Login</a>
                </div>
            </div>
        </div>
    </div>
    <form action="/register" method="post" class="row">
        <div class="col-4">
            <div class="row">
                <div class="form-group col-xs-2">
                    <label for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-2">
                    <label for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-2">
                    <label for="Email">Email</label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign up Now" class="btn btn-primary">
            </div>
        </div>
        <div class="col-4">
            <div class="row">
                <div class="form-group col-xs-2">
                    <label for="Password">Password</label>
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-2">
                    <label for="Confirm">Confirm Password</label>
                    <input asp-for="Confirm" class="form-control">
                    <span asp-validation-for="Confirm" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
</div>