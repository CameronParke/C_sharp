@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="container">
    <form asp-action="result" asp-controller="Home" method="post">
        <h1>Welcome! Please fill out the Dojo Survey below.</h1>
        <div class="form-group">
            <label asp-for="name">Your Name:</label>
            <input class="form-control" placeholder="Enter your name here" asp-for="name">
            <span class="text-danger" asp-validation-for="name"></span>
        </div>
        <div class="form-group">
            <label asp-for="location">Dojo Location:</label>
            <select asp-for="location" class="form-control">
                <option value="" disabled selected hidden>Choose your Dojo Location</option>
                <option value="Bellevue, WA">Bellevue, WA</option>
                <option value="Chicago, IL">Chicago, IL</option>
                <option value="Los Angeles, CA">Los Angeles, CA</option>
                <option value="Silicon Valley, CA">Silicon Valley, CA</option>
                <option value="Boise, ID">Boise, ID</option>
                <option value="Online: Worldwide">Online: Worldwide</option>
            </select>
            <span class="text-danger" asp-validation-for="location"></span>
        </div>
        <div class="form-group">
            <label asp-for="language">Favorite Language</label>
            <select asp-for="language" class="form-control">
                <option value="" disabled selected hidden>Choose your Favorite Language</option>
                <option value="C#">C#</option>
                <option value="MERN">MERN</option>
                <option value="Python">Python</option>
                <option value="Java">Java</option>
            </select>
            <span class="text-danger" asp-validation-for="language"></span>
        </div>
        <div class="form-group">
            <label asp-for="comment">Comment (optional):</label>
            <textarea placeholder="Comments are optional, but if a comment is entered it must be at least 20 characters." asp-for="comment" rows="4" cols="50" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="comment"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>
</div>
