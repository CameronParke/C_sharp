@model Dish

<div class="container px-0 pt-4">
    <h2 class="text-center">Add a Dish!</h2>
    <div class="row pb-4">
        <div class="d-sm-flex">
            <p><a style="text-decoration: underline;" href="/">Home</a></p>
        </div>
    </div>
    <form action="/create/dish" method="post" class="row">
        <div class="col-4">
            <div class="row">
                <div class="form-group col-xs-2">
                    <label for="DishName">Name of Dish</label>
                    <input asp-for="DishName" class="form-control">
                    <span asp-validation-for="DishName" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-2">
                    <label for="Calories"># of Calories</label>
                    <input asp-for="Calories" class="form-control">
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea placeholder="Enter a description for your dish!" asp-for="Description" rows="4" cols="40" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="row">
                <div class="form-group col-xs-1">
                <label asp-for="ChefId">Chef</label>
                <select asp-for="ChefId" class="form-control">
                    <option value="" disabled selected hidden>Choose Chef</option>
                    @{
                        foreach(Chef c in ViewBag.AllChefs)
                        {
                            <option value=@c.ChefId>@c.FirstName @c.LastName</option>
                        }
                    }
                </select>
                <span class="text-danger" asp-validation-for="ChefId"></span>
                </div>
            </div>
                <div class="col">
                <div class="form-group">
                    <input type="submit" value="Add Dish" class="btn btn-primary">
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="row">
                <div class="form-group col-xs-1">
                    <label asp-for="Tastiness">Tastiness</label>
                    <select asp-for="Tastiness" class="form-control">
                        <option value="" disabled selected hidden>Choose</option>
                        <option value=1>1</option>
                        <option value=2>2</option>
                        <option value=3>3</option>
                        <option value=4>4</option>
                        <option value=5>5</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Tastiness"></span>
                </div>
            </div>
        </div>
    </form>
</div>
