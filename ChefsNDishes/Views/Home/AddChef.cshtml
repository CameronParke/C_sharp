@model Chef

<div class="container px-0 pt-4">
    <h2 class="text-center">Add a Chef!</h2>
    <div class="row pb-4">
        <div class="d-sm-flex">
            <p><a style="text-decoration: underline;" href="/">Home</a></p>
        </div>
    </div>
    <form action="/create/chef" method="post" class="row">
        <div class="col-4">
            <div class="row">
                <div class="form-group col-xs-2">
                    <label for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-2">
                    <label for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="form-group col-xs-2">
                <label for="DateOfBirth">Date of Birth</label>
                <input asp-for="DateOfBirth">
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
            <input type="submit" value="Add Chef" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>