@{
    ViewData["Title"] = "Home Page";
}

@model Product

<div class="row mx-0 py-3">
    <div class="col d-flex justify-content-center">
        <div class="d-sm-flex">
            <h1>Products | <a href="/categories" style="text-decoration: underline;">Categories</a></h1>
        </div>
    </div>
</div>
<div class="container">
    <div class="row m-auto py-3">
        <div class="col py-3">
            <h1>New Product</h1>
                <form action="/product/add" method="post">
                    <div class="form-group col-xs-2">
                        <label for="Name">Name</label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-2">
                        <label for="Description">Description</label>
                        <textarea placeholder="Enter a description for your product!" asp-for="Description" rows="3" class="form-control .w-25"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-2">
                        <label for="Price">Price</label>
                        <input asp-for="Price" class="form-control">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-info">
                    </div>
                </form>
        </div>
        <div class="col py-3">    
            <h1>Existing Products</h1>
                @foreach(Product a in ViewBag.AllProducts)
            {
                <h4><a href="/product/@a.ProductId" style="text-decoration: underline;">@a.Name</a></h4>
            }
        </div>
    </div>
</div>